<%= form_for(@user) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :region %>
    <%= f.text_field :region, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :profile %>
    <%= f.text_area :profile, :class => "form-control", :rows => "3" %>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>